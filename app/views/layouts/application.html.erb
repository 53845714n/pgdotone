<!DOCTYPE html>
<html>
<head>
  <title>
	<%= full_title(yield(:title)) %>
  </title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
 	
<% if current_page?('/login') %>
	<%= render 'layouts/login_header' %>
<% elsif current_page?('/') || current_page?('/proyectos') || current_page?('/modelos-ficha') || current_page?('/proyectos-ficha') || current_page?('/quienes-somos') || current_page?('/servicio-cliente') || current_page?('/financiamiento') || current_page?('/contacto') %>
	<%= render 'layouts/header' %>
<% elsif user_signed_in? && current_page?('/admin') || 
	current_page?(action: 'new') || 
	current_page?(action: 'edit') %>
	<%= render 'layouts/user_header' %>
<% end %>

<% if !notice.nil? %>
	<p class="notice">
		<%= notice %>
	</p>
<% end %>
<% if !alert.nil? %>
	<p class="alert">
		<%= alert %>
	</p>
<% end %>

<%= yield %>
<%= render 'layouts/footer' %>

</body>
</html>
