<div class="mantenedor-tabla">
    <table>
        <thead>
            <tr class="mantenedor-titulo">
                <td width="20%">Orden</td>
                <td width="50%">Nombre Pregunta</td>
                <td width="10%">Des/Act</td>
                <td width="10%">Editar</td>
                <td width="10%">Eliminar</td>
            </tr>
        </thead>
        <tbody>
            <% @questions.each do |question| %>
                <tr>
                    <td class="icono">
                        <% if question.order > 1 %>
                            <%= link_to down_order_question_path(question) do %>
                                <i class="fa fa-arrow-down"></i>
                            <% end %>
                        <% end %>
                        <%= question.order %>
                        <%= link_to up_order_question_path(question) do %>
                            <i class="fa fa-arrow-up"></i>
                        <% end %>
                    </td>
                    <td>
                        <%= question.name %>
                    </td>
                    <td class="icono">
                        <%= link_to flop_question_path(question) do %>
                            <% if question.active? %>
                                <i class="fa fa-check"></i>
                            <% else %>
                                <i class="fa fa-close"></i>
                            <% end %>
                        <% end %>
                    </td>
                    <td class="icono">
                        <%= link_to edit_question_path(question.id) do %>
                            <i class="fa fa-cog"></i>
                         <% end %>
                    </td>
                    <td class="icono">
                        <%= link_to question, method: :delete, data: { confirm: 'EstÃ¡ seguro de querer eliminar esta pregunta?' } do %>
                            <i class="fa fa-trash"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>