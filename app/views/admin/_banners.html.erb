<div class="mantenedor-tabla">
    <table>
        <thead>
            <tr class="mantenedor-titulo">
                <td  width="10%">Orden</td>
                <td  width="20%">Video</td>
                <td  width="20%">Imagen</td>
                <td  width="20%">Imagen fondo</td>
                <td  width="10%">Texto</td>
                <td  width="10%">Des/Act</td>
                <td  width="5%">Editar</td>
                <td  width="5%">Eliminar</td>
            </tr>
        </thead>
        <tbody>
            <% @banners.each do |banner| %>
                <tr>
                    <td class="icono">
                        <% if banner.order > 1 %>
                            <%= link_to down_order_banner_path(banner) do %>
                                <i class="fa fa-arrow-down"></i>
                            <% end %>
                        <% end %>
                        <%= banner.order %>
                        <%= link_to up_order_banner_path(banner) do %>
                            <i class="fa fa-arrow-up"></i>
                        <% end %>
                    </td>
                    <td>
                        <% if banner.video.to_s.empty? %>
                            Sin video
                        <% else %>
                            <video src="<%= banner.video.url.to_s.gsub!('/home/seb/Rails/integral/app/assets/videos/', '/assets/') %>" width="180" height="180" controls></video>
                        <% end %>
                    </td>
                    <td>
                        <% if banner.image.to_s.empty? %>
                            Sin imagen
                        <% else %>
                            <%= image_tag banner.image.thumb.url %>
                        <% end %>
                    </td>
                    <td>
                        <% if banner.background_image.to_s.empty? %>
                            Sin imagen de fondo
                        <% else %>
                            <%= image_tag banner.background_image.thumb.url %>
                        <% end %>
                    </td>
                    <td>
                        <%= banner.text %>
                    </td>
                    <td class="icono">
                        <%= link_to flop_banner_path(banner) do %>
                            <% if banner.active? %>
                                <i class="fa fa-check"></i>
                            <% else %>
                                <i class="fa fa-close"></i>
                            <% end %>
                        <% end %>
                    </td>
                    <td class="icono">
                        <%= link_to edit_banner_path(banner.id) do %>
                            <i class="fa fa-cog"></i>
                        <% end %>
                    </td>
                    <td class="icono">
                        <%= link_to banner, method: :delete, data: { confirm: 'EstÃ¡ seguro de querer eliminar este usuario?' } do %>
                            <i class="fa fa-trash"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>