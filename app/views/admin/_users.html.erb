<div class="mantenedor-tabla">
    <table>
        <thead>
            <tr class="mantenedor-titulo">
                <td  width="20%">Username</td>
                <td  width="20%">E-mail</td>
                <td  width="20%">Nombre</td>
                <td  width="10%">Rol</td>
                <td  width="10%">Des/Act</td>
                <td  width="10%">Editar</td>
                <td  width="10%">Eliminar</td>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td>
                        <%= user.username %>
                    </td>
                    <td>
                        <%= user.email %>
                    </td>
                    <td>
                        <%= user.fullname %>
                    </td>
                    <td class="text-center">
                        <%= user.admin? ? 'Admin' : 'User' %>
                    </td>
                    <td class="icono">
                        <%= link_to flop_user_path(user) do %>
                            <% user.active_or_not %>
                            <% if user.active? %> 
                                <i class="fa fa-check"></i>
                            <% else %>
                                <i class="fa fa-close"></i>
                            <% end %>
                        <% end %>
                    </td>
                    <td class="icono">
                        <%= link_to edit_user_path(user.id) do %>
                            <i class="fa fa-cog"></i>
                        <% end %>
                    </td>
                    <td class="icono">
                        <%= link_to delete_user_path(user), method: :delete, data: { confirm: 'EstÃ¡ seguro de querer eliminar este usuario?' } do %>
                            <i class="fa fa-trash"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>