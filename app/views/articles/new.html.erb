<section class="cuerpo">
	<div class="container">
    	<div class="row">
            <h1>Crear Nuevo Artículo</h1>
        </div>
        <%= form_for(@article) do |f| %>
    		<%#= devise_error_messages! %>
	        <div class="row blanco campos">
				<% if @article.errors.full_messages.any? %>
					<div id="error_explanation" class="col-xs-12 col-sm-12">
						<h2>
							<%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:
						</h2>
						<ul>
							<% @article.errors.full_messages.each do |message| %>
								<li><%= message %></li>
							<% end %>
						</ul>
					</div>
				<% end %>
				
				<div class="col-xs-12 col-sm-12">
				    <h4>Nombre de artículo</h4>
				    <%= f.text_field :article_name, autofocus: true, class: 'form-control' %>
				</div>
				<div class="col-xs-12 col-sm-12">
				    <h4>Descripción</h4>
				    <%= f.cktext_area :description %>
				</div>
				<div class="col-xs-12 col-sm-12">
				    <h4>Categoría</h4>
				    <%= f.select :category_id, Category.all.map { |c| [ c.category_name, c.id ] }, class: 'form-control' %>
				</div>
				<div class="col-xs-12 col-sm-12">
				    <h4>Subcategoría</h4>
				    <%= f.select :subcategory_id, Subcategory.all.map { |s| [ s.subcategory_name, s.id ] }, class: 'form-control' %>
				</div>
	            <div class="col-xs-12 col-sm-12" style="margin-top: 15px;">
			    	<%= f.submit 'Crear artículo', class: 'btn btn-create btn-ingresar' %>
				</div>
				<div class="col-xs-12 col-sm-12" style="margin-top: 15px;">
					<%= link_to 'Volver', admin_path %>
				</div>
			</div>
        <% end %>
    </div>
</section>